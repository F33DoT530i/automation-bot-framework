{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Interaction Recording Schema",
  "description": "Schema for storing user interaction data for AI assistant system",
  "type": "object",
  "required": ["session_id", "start_time", "end_time", "metadata", "interactions"],
  "properties": {
    "session_id": {
      "type": "string",
      "description": "Unique identifier for the recording session"
    },
    "start_time": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of session start"
    },
    "end_time": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of session end"
    },
    "metadata": {
      "type": "object",
      "required": ["screen_resolution", "os_info"],
      "properties": {
        "screen_resolution": {
          "type": "object",
          "properties": {
            "width": {"type": "integer"},
            "height": {"type": "integer"}
          }
        },
        "os_info": {
          "type": "object",
          "properties": {
            "platform": {"type": "string"},
            "version": {"type": "string"}
          }
        },
        "device_name": {"type": "string"},
        "user_id": {"type": "string"}
      }
    },
    "interactions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["timestamp", "type"],
        "properties": {
          "timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "ISO 8601 timestamp of the interaction"
          },
          "type": {
            "type": "string",
            "enum": ["mouse_move", "mouse_click", "mouse_scroll", "key_press", "key_release", "app_switch"],
            "description": "Type of interaction"
          },
          "data": {
            "type": "object",
            "description": "Interaction-specific data",
            "properties": {
              "x": {"type": "number"},
              "y": {"type": "number"},
              "button": {"type": "string", "enum": ["left", "right", "middle"]},
              "key": {"type": "string"},
              "modifiers": {"type": "array", "items": {"type": "string"}},
              "scroll_dx": {"type": "number"},
              "scroll_dy": {"type": "number"},
              "app_name": {"type": "string"},
              "app_id": {"type": "string"},
              "window_title": {"type": "string"},
              "is_sensitive": {"type": "boolean", "description": "Flag for anonymized sensitive data"}
            }
          },
          "context": {
            "type": "object",
            "properties": {
              "active_app": {"type": "string"},
              "window_title": {"type": "string"},
              "screen_region": {"type": "string"}
            }
          }
        }
      }
    }
  }
}
